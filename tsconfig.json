{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "node",
      "vitest/globals"
    ],
    "outDir": "./dist"
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.test.ts",
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}