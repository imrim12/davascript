{
  "version": "0.0.1",
  "type": "module",
  "description": "Vietnamese programming language - Ngôn ngữ lập trình tiếng Việt.",
  "packageManager": "pnpm@8.5.0",
  "scripts": {
    "nx": "nx",
    "lint": "eslint . --ext .ts,.js --fix",
    "build": "nx run-many --target=build --all",
    "typecheck": "nx run-many --target=typecheck --all",
    "test": "vitest run",
    "dev": "vitest --ui",
    "dev:docs": "vitepress dev docs",
    "serve:docs": "vitepress serve docs",
    "build:docs": "vitepress build docs",
    "prepare-husky": "husky install",
    "release": "release-it",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imrim12/vietscript.git"
  },
  "keywords": [
    "language",
    "vietscript",
    "vietnamese",
    "programming language"
  ],
  "author": "imrim12",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/imrim12/vietscript/issues"
  },
  "homepage": "https://github.com/imrim12/vietscript#readme",
  "workspaces": [
    "packages/**",
    "sandbox"
  ],
  "dependencies": {
    "@vietscript/parser": "workspace:*"
  },
  "devDependencies": {
    "@babel/generator": "^7.22.10",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@nrwl/nx-cloud": "16.3.0",
    "@nrwl/workspace": "16.6.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/babel-generator": "^6.25.5",
    "@types/lodash": "^4.14.187",
    "@types/node": "^18.11.8",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vitejs/plugin-vue-jsx": "^2.0.1",
    "@vitest/ui": "^0.24.5",
    "@vue/test-utils": "^2.2.1",
    "eslint": "^8.23.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^45.0.2",
    "husky": "^8.0.2",
    "jsdom": "^20.0.2",
    "nx": "16.6.0",
    "peggy": "^3.0.2",
    "prettier": "^2.8.1",
    "release-it": "^15.5.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vitepress": "1.0.0-alpha.49",
    "vitest": "^0.24.5",
    "vue": "^3.2.41",
    "vue-tsc": "^1.0.9"
